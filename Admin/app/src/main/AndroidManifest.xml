<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mlms.mobilelaundrymanagementsystemadmin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileLaundryManagementSystemAdmin"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".OpenNewBillActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name" />
        <activity
            android:name=".EmployeeActivity"
            android:exported="true"
            android:label="@string/app_name" />
        <activity
            android:name=".NewEmployeeActivity"
            android:exported="true"
            android:label="@string/NewEmployee_form" />
        <activity
            android:name=".LaundryDetailViewActivity"
            android:exported="true"
            android:label="@string/laundrydetailview_title" />
    </application>

</manifest>